<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="view.balllist.activity.BallListActivity"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/layout_body">

        <android.opengl.GLSurfaceView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/game_canvas" />
        <TextView android:text="Text" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frame_rate"
            android:translationX="7pt" android:translationY="6pt"
            android:layout_marginTop="50dp"
            android:visibility="gone"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:id="@+id/reset_button"
            android:textSize="5pt"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/time_button"
            android:textSize="5pt"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/reset_button"
            android:layout_toStartOf="@+id/reset_button"
            android:visibility="gone"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:id="@+id/spawntype_button"
            android:textSize="5pt"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/time_button"
            android:layout_toStartOf="@+id/time_button"
            android:visibility="gone"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_diary_now_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="73dp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-thin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        />
    <TextView
        android:id="@+id/text_diary_month_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18dp"
        android:textColor="#bbbdc4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif-thin"
        android:layout_below="@+id/text_diary_now_month"
        />

    <TextView
        android:id="@+id/text_diary_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_month_msg"
        android:textSize="18dp"
        android:textColor="#bbbdc4"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif-regular"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/show_popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <RelativeLayout
            android:id="@+id/show_popup_inner"
            android:layout_width="338dp"
            android:layout_height="327.75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="162.5dp"

        >
        <TextView
            android:id="@+id/text_diary_list_popup_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="26.5dp"
            android:textColor="#000000"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-thin"
            />
        <TextView
            android:id="@+id/diary_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="87.5dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="16dp"
            android:textColor="#000000"
            android:gravity="top"

            />

        <RelativeLayout
            android:id="@+id/diary_image_container"
            android:layout_width="55.25dp"
            android:layout_height="61dp"
            android:layout_marginLeft="261dp"
            android:layout_marginTop="194dp"
            android:rotation="10"
            android:background="@drawable/diary_img_back"
            >
            <ImageView
                android:id="@+id/diary_image"
                android:layout_width="38.75dp"
                android:layout_height="38.75dp"
                android:background="@drawable/diary_img_plus"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="8dp"
                android:scaleType="centerCrop"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/btn_remove_diary"
            android:layout_width="23.25dp"
            android:layout_height="25.75dp"
            android:background="@drawable/icon_trash"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="17dp"
            />
        <ImageView
            android:id="@+id/btn_modify_diary"
            android:layout_width="25dp"
            android:layout_height="25.75dp"
            android:background="@drawable/icon_edit"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="69.25dp"
            android:layout_marginBottom="17dp"
            />
        <Button
            android:id="@+id/btn_close_popup"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_x"
            android:layout_marginRight="11dp"
            android:layout_marginTop="12dp"
            />
    </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/modify_popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7F000000"
        android:visibility="gone"
        >
        <RelativeLayout
            android:id="@+id/modify_inner_popup"
            android:layout_width="338dp"
            android:layout_height="327.75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="162.5dp"
            >
            <TextView
                android:id="@+id/text_modify_popup_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="26.5dp"
                android:textColor="#000000"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-thin"
                />
            <EditText
                android:id="@+id/modify_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="87.5dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:fontFamily="sans-serif-thin"
                android:textSize="16dp"
                android:textColor="#000000"
                android:gravity="top"

                />
            <Button
                android:id="@+id/btn_modify_close_popup"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                />
            <ImageView
                android:id="@+id/btn_modify"
                android:layout_width="173.5dp"
                android:layout_height="54dp"
                android:background="@drawable/btn_save"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="0.5dp"
                />
            <ImageView
                android:id="@+id/btn_modify_cancel"
                android:layout_width="164.75dp"
                android:layout_height="54dp"
                android:background="@drawable/btn_cancel"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                />

            <RelativeLayout
                android:layout_width="55.25dp"
                android:layout_height="61dp"
                android:layout_marginLeft="261dp"
                android:layout_marginTop="194dp"
                android:rotation="10"
                android:background="@drawable/diary_img_back"
                >
                <ImageView
                    android:id="@+id/btn_modify_add_pic"
                    android:layout_width="38.75dp"
                    android:layout_height="38.75dp"
                    android:background="@drawable/diary_img_plus"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="8dp"
                    android:scaleType="centerCrop"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_gra"
        android:layout_width="match_parent"
        android:layout_height="65.75dp"
        android:background="@drawable/gra"
        />
    <ImageView
        android:id="@+id/img_drawer_icon"
        android:layout_width="37.5dp"
        android:layout_height="37.5dp"
        android:background="@drawable/icon_menu"
        android:layout_marginLeft="5.25dp"
        android:layout_marginTop="18dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:id="@+id/diary_detail_image"
        android:visibility="gone"
        >
        <it.sephiroth.android.library.imagezoom.ImageViewTouch
            android:id="@+id/diary_zoom_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#B2000000"
            >
            <ImageView
                android:id="@+id/img_ball_color"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/ball_yellow_103"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13.5dp"
                />
            <TextView
                android:id="@+id/detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_ball_color"
                android:text="Sep, 8, 2017"
                android:textSize="18.25dp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <Button
                android:id="@+id/btn_close"
                android:layout_alignParentRight="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_x_w"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <!--<com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id2">
        </com.google.android.gms.ads.AdView>-->

    </RelativeLayout>

    <tbja.co.kr.feelingdiary.customviews.DrawerMenu
        android:id="@+id/main_drawer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4b000000"
        android:visibility="gone"
        >

    </tbja.co.kr.feelingdiary.customviews.DrawerMenu>

</RelativeLayout>
