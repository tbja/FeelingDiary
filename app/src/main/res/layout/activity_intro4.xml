<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tbja.co.kr.feelingdiary.view.intro.activity.Intro4Activity"
    android:background="@drawable/main_bg_3"
    >
    <ImageView
        android:id="@+id/bg_light"
        android:layout_width="273.75dp"
        android:layout_height="273.75dp"
        android:background="@drawable/hoo_guang"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108.75dp"
        android:textColor="#d7d8da"
        android:textSize="26.75dp"
        android:fontFamily="sans-serif-thin"
        android:text="@string/intro_4_text"
        android:lineSpacingExtra="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />


    <Button
        android:id="@+id/btn_move_page"
        android:layout_width="wrap_content"
        android:layout_height="46.5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64.25dp"
        android:background="@drawable/btn_round_rec2"
        android:text="@string/receive"
        android:textColor="#ffffff"
        android:textSize="16.75dp"
        android:paddingLeft="39.5dp"
        android:paddingRight="39.5dp"
        android:textAllCaps="false"
        />
    <ImageView
        android:layout_width="55.25dp"
        android:layout_height="53.5dp"
        android:background="@drawable/ic_gift"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="363.25dp"
        />
</RelativeLayout>
